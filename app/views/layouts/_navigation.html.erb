<div class="masthead center-block">
  <%= link_to image_tag('logo.jpg', class: 'masthead-logo img-responsive center-block'), root_path, class: '' %>
  <nav>
    <ul class="nav nav-pills nav-justified">
      <li role="presentation" class="<%= 'active' if current_page? root_path %>"><%= link_to 'Home', root_path %></li>
      <li role="presentation" class="<%= 'active' if current_page? vehicles_path %>"><%= link_to 'Inventory', vehicles_path %></li>
      <li role="presentation" class="<%= 'active' if current_page? new_contact_path %>"><%= link_to 'Contact Us', new_contact_path %></li>
      <li role="presentation" class="<%= 'active' if current_page? page_path('about') %>"><%= link_to 'About', page_path('about') %></li>
      <% if user_signed_in? %>
          <li role="presentation" class="<%= 'active' if current_page? destroy_user_session_path %>"><%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %></li>
      <% end %>
    </ul>
  </nav>
</div>
