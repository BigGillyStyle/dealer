<%= form_tag contacts_path do %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= text_field_tag 'name', nil, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <%= text_field_tag 'email', nil, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="subject">Subject</label>
    <%= text_field_tag 'subject', nil, required: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label for="message">Message</label>
    <%= text_area_tag 'message', nil, required: true, class: 'form-control' %>
  </div>
  <%= submit_tag 'Submit', class: 'btn btn-default' %>
<% end %>